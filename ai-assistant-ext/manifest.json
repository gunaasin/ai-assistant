{
    "manifest_version": 3,
    "name": "Research Assistant",
    "version": "1.0",
    "description": "AI-powered Research Assistant",
    "permissions": [
        "activeTab",
        "storage",
        "sidePanel",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Research Assistant",
        "default_icon": {
            "16": "ai + gemini fin.png",
            "32": "ai + gemini fin.png",
            "48": "ai + gemini fin.png",
            "128": "ai + gemini fin.png"
        },
        "open_side_panel": true
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "host_permissions": [
        "https://ai-production-1.onrender.com/*",
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    }
}
